# Flask app
app = Flask(__name__)
run_with_ngrok(app)

@app.route('/')
def home():
    return render_template('index.html', planets=planet_info)

@app.route('/planet/<name>')
def planet(name):
    planet = planet_info.get(name.lower())
    if planet:
        return render_template('planet.html', planet_name=name.capitalize(), planet=planet)
    else:
        return "<h1>Planet not found</h1>"

if __name__ == "__main__":
    app.run()
